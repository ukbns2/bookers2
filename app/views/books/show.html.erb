<p class ="notice"><%= flash[:notice] %></p>

<h2>New Book</h2>

<%= form_with model: @book do |f| %>
 <h4>Title</h4>
  <%= f.text_field :title %>
 <h4>Opinion</h4>
  <%= f.text_field :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<h2>Book detail</h2>

<table>
  <tbody>
   <td></td>
   <td><%= @book.title %></td>
   <td><%= @book.body %></td>
   <% if @book.user == current_user %>
    <td><%= link_to "Edit", edit_book_path(@book) %></td>
    <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you Sureï¼Ÿ" %></td>
   <% end %>
  </tbody>
</table>


