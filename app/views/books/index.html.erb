<h2>New Book</h2>

<%= form_with model: @book do |f| %>
 <h4>Title</h4>
  <%= f.text_field :title %>
 <h4>Opinion</h4>
  <%= f.text_field :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>

<table>
 <thead>
  <tr>
   <th></th>
   <th>Title</th>
   <th>Opinion</th>
 </thead>
 <% @books.each do |book| %>
  <tbody>
   <td></td>
   <td>
    <%= link_to book.title, book_path(book.id) %></td>
   <td><%= book.body %></td>
  </tbody>
 <% end %>
</table>