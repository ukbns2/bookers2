<p class ="notice"><%= flash[:notice] %></p>

<%= render 'users/user_info', user:@user %>

<div>
  <h2>New Book</h2>
  <%= form_with model: @book do |f| %>
   <h4>Title</h4>
    <%= f.text_field :title %>
   <h4>Opinion</h4>
    <%= f.text_field :body %>

    <%= f.submit 'Create Book' %>
  <% end %>
</div>

<div>
  <h2>Books</h2>

  <table>
   <thead>
    <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th></th>
    </tr>
   </thead>
   <% @books.each do |book| %>
    <tbody>
     <td><%= link_to image_tag book.user.get_profile_image(80,80) %></td>
     <td><%= link_to book.title, book_path(book.id) %></td>
     <td><%= book.body %></td>
    </tbody>
   <% end %>
  </table>
</div>
