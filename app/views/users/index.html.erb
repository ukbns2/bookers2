<div>
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <table>
    <tbody>
      <tr></tr>
      <tr>name</tr>
      <th><%= @user.name %></th>
      <tr>introduction</tr>
      <th><%= @user.introduction %></th>
    </tbody>
  </table>
</div>

<div>
  <h2>New Book</h2>
  <%= form_with model: @book do |f| %>
   <h4>Title</h4>
    <%= f.text_field :title %>
   <h4>Opinion</h4>
    <%= f.text_field :body %>

    <%= f.submit 'Create Book' %>
  <% end %>
</div>

