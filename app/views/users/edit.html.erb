<div>
  <div>
    <div>
      <h2>User info</h2>

      <div class ="errors-message">
      <% if @user.errors.any? %>
       <h2><%= @user.errors.count %>errors prohibited this book from being saved:</h2>
       <ul>
        <% @user.errors.full_messages.each do |message| %>
         <li><%= message %></li>
        <% end %>
       </ul>
      <% end %>
     </div>

      <%= form_with model: @user do |f| %>
       <div>
        <label for = "user_name">Name</label>
        <%= f.text_field :name, autofocus: true, id: "user_name" %>
       </div>
       <div>
        <label for = "user_image">Image</label>
        <%= f.file_field :profile_image, accept: "image/*" %>
       </div>
       <div>
        <label for = "user_introduction">Introduction</label>
        <%= f.text_area :introduction, id: "user_introduction" %>
       </div>
       <div>
        <%= f.submit "Update User" %>
       </div>
      <% end %>
    </div>
  </div>
</div>