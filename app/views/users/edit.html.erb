<div class ="container">
  <div class ="row">
    <div class ="col-sm-12 col-md-8 col-md-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

      <div class ="errors-message">
      <% if @user.errors.any? %>
       <h2><%= @user.errors.count %>errors prohibited this book from being saved:</h2>
       <ul>
        <% @user.errors.full_messages.each do |message| %>
         <li><%= message %></li>
        <% end %>
       </ul>
      <% end %>
     </div>

      <%= form_with model: @user do |f| %>
       <div class ="form-group">
        <label for = "user_name">Name</label>
        <div><%= f.text_field :name, autofocus: true, id: "user_name" %></div>
       </div>
       <div class ="form-group">
        <label for = "user_image">Image</label>
        <div><%= f.file_field :profile_image, accept: "image/*" %></div>
       </div>
       <div class ="form-group">
        <label for = "user_introduction">Introduction</label>
        <div><%= f.text_area :introduction, id: "user_introduction" %></div>
       </div>
       <div>
        <%= f.submit "Update User", class: 'btn btn-secondary' %>
       </div>
      <% end %>
    </div>
  </div>
</div>